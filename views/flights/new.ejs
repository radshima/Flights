<%- include('../partials/header') %>

<h1>Add a Flight</h1>
<form action="/flights" method="POST">
  <label for="airline">Airline:</label>
  <select id="airline" name="airline" required>
    <option value="American">American</option>
    <option value="Southwest">Southwest</option>
    <option value="United">United</option>
  </select>

  <label for="airport">Airport:</label>
  <select id="airport" name="airport" required>
    <option value="AUS">AUS</option>
    <option value="DFW">DFW</option>
    <option value="DEN">DEN</option>
    <option value="LAX">LAX</option>
    <option value="SAN">SAN</option>
  </select>

  <label for="flightNo">Flight Number:</label>
  <input type="number" id="flightNo" name="flightNo" min="10" max="9999" required>

  <label for="departs">Departs:</label>
  <input type="datetime-local" id="departs" name="departs" required>

  <button type="submit">Add a Flight</button>
</form>
